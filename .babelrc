{
  "presets": [
    [
      "es2015",
      {
        "modules": false
      }
    ],
    "es2016",
    "es2017"
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "istanbul",
          {
            "exclude": [
              "**/*.test.js"
            ]
          }
        ],
        "rewire"
      ]
      , "presets": [
        ["env", {
          "modules": 'commonjs',
          "targets": {
              "node": 4,
              "browsers": [
                "last 2 versions",
                "chrome >= 55",
                "IE >= 11"
              ]
            }
        }]
      ]
    },
    "production": {
      "plugins": [
        "lodash"
      ]
      , "presets": [
        ["env", {
          "modules": false,
          "targets": {
              "node": 4,
              "browsers": [
                "last 2 versions",
                "chrome >= 55",
                "IE >= 11"
              ]
            }
        }]
        , "babili"
      ]
    },
  }
}
