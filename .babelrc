{
  "presets": [
    "es2015",
    "es2016",
    "es2017"
  ],
  "env": {
    "test": {
      "plugins": [
        [
          "istanbul",
          {
            "exclude": [
              "**/*.test.js"
            ]
          }
        ],
        "rewire"
      ]
    },
    "production": {
      "plugins": [
        "lodash",
        "add-module-exports"
      ]
      , "presets": [
        ["env", {
          "modules": "umd",
          "targets": {
              "node": 4,
              "browsers": [
                "last 2 versions",
                "chrome >= 55",
                "IE >= 11"
              ]
            }
        }]
        , "babili"
      ]
    },
  }
}
